<h1 style="text-align: center; margin-top:10% ">Burger Saver </h1>



<div style="margin-top: 5%;" class="row">
	<div class="col-6">
		<h3>Uneaten Burger</h3>

		<ul class="list-group ">
			{{#each burger}}
			{{#unless devoured}}

			<form action='/api/burger/{{id}}' method="POST">
				<div class="input-group mb-3">
					<li class="form-control fas fa-hamburger">
						<b>{{this.burger_name}}🍔</b>

					</li>
					<span class="input-group-btn"></span>

					<button type="submit" class="btn btn-danger float-end">Devour it </button>

					</span>
				</div>
			</form>
			{{/unless}}
			{{/each}}
		</ul>







	</div>
	<div class="col-6">
		<h3>Eaten Burger</h3>
		<div class="col-9">
			<ul class="list-group mb-3 ">
				{{#each burger}}
				{{#if devoured}}
				<li class="form-control fas fa-hamburger">
					<b>{{this.burger_name}} </b>
					🍔
				</li>
				{{/if}}
				{{/each}}

			</ul>
		</div>

	</div>
</div>






</div>

